<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".UI.SubPages.MoreStates">
    <TextView
        android:id="@+id/morestates_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="More states"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:shadowColor="#5e3c5a"
        android:shadowDx="0"
        android:shadowDy="10"
        android:shadowRadius="10"></TextView>
    <TextView
        android:id="@+id/morestates_weather_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Clear"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@id/morestates_title"
        android:layout_marginTop="10dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/morestates_weather_text">

        // first paragraph
        <LinearLayout
            android:id="@+id/morestates_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:text="Feels like"
                    android:textSize="20dp"
                    android:textAlignment="center"></TextView>
                <TextView
                    android:id="@+id/morestates_temp_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="17.9"
                    android:textSize="40dp"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:text="Visibility"
                    android:textSize="20dp"
                    android:textAlignment="center"></TextView>
                <TextView
                    android:id="@+id/morestates_visibility_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="6.2"
                    android:textSize="40dp"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"></TextView>
            </LinearLayout>
        </LinearLayout>

        // second paragraph
        <LinearLayout
            android:id="@+id/morestates_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:text="Percipitation"
                    android:textSize="20dp"
                    android:textAlignment="center"></TextView>
                <TextView
                    android:id="@+id/morestates_percipitation_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="0 mm"
                    android:textSize="40dp"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:text="Humidity"
                    android:textSize="20dp"
                    android:textAlignment="center"></TextView>
                <TextView
                    android:id="@+id/morestates_humidity_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="48 %"
                    android:textSize="40dp"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"></TextView>
            </LinearLayout>
        </LinearLayout>

        // Third paragraph
        <LinearLayout
            android:id="@+id/morestates_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:text="Time Zone"
                    android:textSize="20dp"
                    android:textAlignment="center"></TextView>
                <TextView
                    android:id="@+id/morestates_timezone_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="BST"
                    android:textSize="40dp"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:text="Time offset"
                    android:textSize="20dp"
                    android:textAlignment="center"></TextView>
                <TextView
                    android:id="@+id/morestates_timeoffset_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="+0100"
                    android:textSize="40dp"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>